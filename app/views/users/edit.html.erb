<h1>Edit profile</h1>

<%= form_for @user, html: { class: "user-form" } do |f| %>
<div class="form-field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="form-field">
  <%= f.label :username %>
  <%= f.text_field :username %>
</div>

<div class="form-field">
  <%= f.label :email %>
  <%= f.email_field :email %>
</div>

<div class="form-field">
  <%= f.label :bio %>
  <%= f.text_area :bio %>
</div>

<div class="form-field">
  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
</div>

<%= f.submit "Save profile" %>
<% end %>
